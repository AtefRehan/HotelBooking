@model Booking

<div>
    <h2>Booking Details</h2>
    <dl class="row">
        <dt class="col-sm-2">Customer Name</dt>
        <dd class="col-sm-10">@Model.Customer.Name</dd>
        <dt class="col-sm-2">National ID</dt>
        <dd class="col-sm-10">@Model.Customer.NationalId</dd>
        <dt class="col-sm-2">Phone Number</dt>
        <dd class="col-sm-10">@Model.Customer.PhoneNumber</dd>
        <dt class="col-sm-2">Branch</dt>
        <dd class="col-sm-10">@Model.Branch.BranchName</dd>
        <dt class="col-sm-2">Check-In Date</dt>
        <dd class="col-sm-10">@Model.CheckInDate.ToShortDateString()</dd>
        <dt class="col-sm-2">Check-Out Date</dt>
        <dd class="col-sm-10">@Model.CheckOutDate.ToShortDateString()</dd>
        <dt class="col-sm-2">Total Rooms</dt>
        <dd class="col-sm-10">@Model.TotalRooms</dd>
        <dt class="col-sm-2">Discount Applied</dt>
        <dd class="col-sm-10">@Model.DiscountApplied</dd>
    </dl>
</div>
<div>
    <h3>Rooms</h3>
    <table class="table">
        <thead>
        <tr>
            <th>Room Type</th>
            <th>Number of Adults</th>
            <th>Number of Children</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var room in Model.Rooms)
        {
            <tr>
                <td>@room.RoomType</td>
                <td>@room.NumberOfAdults</td>
                <td>@room.NumberOfChildren</td>
            </tr>
        }
        </tbody>
    </table>
</div>